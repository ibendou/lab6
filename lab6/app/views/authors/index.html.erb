<h2>Listing Active Authors</h2>

<table class="striped">
  <tr>
    <th>Author Name</th>
    <th></th>
    <th></th>
  </tr>

<% @authors.each do |author| %>
  <tr>
    <td><%= link_to author.name, author_path(author) %></td>
    <td><%= link_to 'Edit', edit_author_path(author), :class=> "waves-effect waves-light btn light-blue"  %></td>
    <td><%= link_to 'Destroy', author, confirm: 'Are you sure?', method: :delete, :class=> "waves-effect waves-light btn red" %></td>
  </tr>
<% end %>
</table>
<br />
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @authors, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

<br />

<%= link_to 'New Author', new_author_path %>
